---
import arrow from '../images/arrow.svg';
import '../styles/card.css';

export interface Props {
  title: string;
  excerpt: string;
  featuredImg: string;
  slug: string;
  tags: Array<string>;
}
const { title, excerpt, featuredImg, slug, tags } = Astro.props as Props;
---

<div
  class='card'
  data-aos='fade-up'
  data-aos-offset='0'
  data-aos-delay='50'
  data-aos-duration='500'
  data-aos-easing='ease-in-out'
  data-aos-mirror='true'
  data-aos-once='false'
  data-aos-anchor-placement='top-center'
>
  <img
    transition:name=`${slug}`
    transition:animate='initial'
    src=`/projectImages/${featuredImg}`
  />
  <div class='card__text'>
    <h5>featured project</h5>
    <h4>{title}</h4>
    <div class='card__text__excerpt'>
      <p>{excerpt}</p>
    </div>
    <div class='tags'>
      {tags.map((tag) => <span>{tag}</span>)}
    </div>
    <div class='button'>
      <a href=`/${slug}`
        >view project <img
          src={arrow.src}
          alt='decorative arrow'
          loading='lazy'
        /></a
      >
    </div>
  </div>
</div>
